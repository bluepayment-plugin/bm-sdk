{
    "name": "bluepayment-plugin/bm-sdk",
    "description": "Blue Media PHP SDK",
    "license": "LGPL-3.0-only",
    "require": {
        "php": ">=7.2",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "jms/serializer": "^1.14|^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "3.*",
        "pcov/clobber": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "BlueMedia\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "archive": {
        "skip-dev": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
